<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="50dp"
    tools:context=".SmsSender">

    <TextView
        android:id="@+id/lblEnterPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:autoSizeTextType="uniform"
        android:text="Recipient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="0118 999 881 999 119 725 3"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblEnterPhone" />

    <Button
        android:id="@id/btnSelectContact"
        android:layout_marginStart="32dp"
        android:layout_height="wrap_content"
        android:text="Select contact"
        app:layout_constraintEnd_toStartOf="@+id/btnSendSms"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="btnSelectContact_onClick"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSendSms"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/txtPhoneNumber"
        android:onClick="btnSendSms_onClick"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btnSelectContact" />


</androidx.constraintlayout.widget.ConstraintLayout>